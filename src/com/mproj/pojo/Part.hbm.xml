<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.mproj.pojo.Part" table="T_PARTS">
        <id name="id" type="java.lang.Integer">
            <column name="P_ID" />
            <generator class="native" />
        </id>
        <property name="num" column="P_NUM" type="java.lang.String">
        </property>
        <property name="name" column="P_NAME" type="java.lang.String">
        </property>
        <property name="proDate" column="PRO_DATE" type="java.util.Date">
        </property>
        <property name="useDate" column="USE_DATE" type="java.util.Date">
        </property>
        <property name="useYear" column="USE_YEAR" type="java.lang.Float">
        </property>
        <property name="supplier" column="SUPPLIER" type="java.lang.String">
        </property>
        <property name="status" column="P_STATUS" type="java.lang.Boolean">
        </property>
        
        <!-- 零件类型 -->
        <many-to-one name="partType" column="P_TYPE_ID" class="com.mproj.pojo.PartType" lazy="false">
        </many-to-one>
		
		<!-- 零件所属设备 -->
        <many-to-one name="machine" column="M_ID" class="com.mproj.pojo.Machine">
        </many-to-one>

    </class>
</hibernate-mapping>
